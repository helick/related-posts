{
    "name": "helick/related-posts",
    "type": "wordpress-plugin",
    "description": "The Helick related posts plugin",
    "keywords": [
        "helick",
        "related posts"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/helick/related-posts/issues",
        "source": "https://github.com/helick/related-posts"
    },
    "authors": [
        {
            "name": "Evgenii Nasyrov",
            "email": "evgenii@helick.io"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer/installers": "^1.6",
        "helick/contracts": "^1.1",
        "htmlburger/carbon-fields": "^3.1",
        "wp-cli/wp-cli": "^2.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Helick\\RelatedPosts\\": "src/"
        }
    },
    "scripts": {
        "lint": [
            "phpcs -p --standard=psr2 src"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
